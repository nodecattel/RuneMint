# Wallet Configuration
# Required: Your private key in WIF format (e.g., "Pgo6Kgt2mS...")
PRIVATE_KEY=""

# Optional: Destination address for minted runes
# If empty, runes will be sent back to the source address
# Example: "bel1q4yxvz242..." for mainnet or "tbel1q4yxvz..." for testnet
DESTINATION_ADDRESS=""

# Network Configuration
# Choose between "mainnet" or "testnet"
NETWORK="mainnet"

# RPC Configuration (for local Bells Core)
# Set to "true" to use local RPC instead of remote API
USE_LOCAL_RPC="false"
# RPC connection details (required if USE_LOCAL_RPC="true")
RPC_URL="http://localhost:19918"
RPC_USER="test"
RPC_PASS="test"

# Minting Configuration
# Number of transactions to create (max 1000)
MINT_COUNT=200

# Fee rate in sat/vB (satoshis per virtual byte)
FEE_RATE=50

# Rune Configuration
# Rune ID (e.g., 1 for NINTONDO)
RUNE_ID=1

# Rune symbol number (usually 0)
RUNE_SYMBOL=0

# Amount of runes to mint per transaction
# Total runes minted will be MINT_COUNT * RUNE_AMOUNT
RUNE_AMOUNT=1
